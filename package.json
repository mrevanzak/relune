{
  "name": "relune",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "drizzle-orm": "^0.45.1",
      "zod": "^4.1.13",
      "typescript": "^5",
      "dotenv": "^17.2.2",
      "@orpc/client": "^1.12.2",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "@orpc/experimental-pino": "^1.12.2",
      "@supabase/supabase-js": "^2.89.0",
      "node-av": "^5.0.3"
    }
  },
  "type": "module",
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @relune/db db:push",
    "db:studio": "turbo -F @relune/db db:studio",
    "db:generate": "turbo -F @relune/db db:generate",
    "db:migrate": "turbo -F @relune/db db:migrate"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@relune/config": "workspace:*",
    "@types/bun": "^1.3.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "server": "workspace:*",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "6.5.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.5",
  "trustedDependencies": [
    "node-av",
    "@seydx/node-av-darwin-arm64",
    "@seydx/node-av-darwin-x64",
    "@seydx/node-av-linux-arm64",
    "@seydx/node-av-linux-x64",
    "@seydx/node-av-win32-arm64-mingw",
    "@seydx/node-av-win32-arm64-msvc",
    "@seydx/node-av-win32-x64-mingw",
    "@seydx/node-av-win32-x64-msvc"
  ]
}
