		"@relune/config": "workspace:*",
		"@relune/db": "workspace:*",
		"@sinclair/typebox": "^0.34.43",
		"@supabase/supabase-js": "^2.89.0",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.45.1",
		"elysia": "^1.3.21"
	},
	"devDependencies": {
		"@types/bun": "^1.3.4",
		"tsdown": "^0.18.3"
	},
	"trustedDependencies": [
		"supabase"
	]
}
